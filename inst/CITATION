citHeader("To cite sparr in publications use:")

citEntry(entry = "article",
  title        = "Tutorial on kernel estimation of continuous spatial and spatiotemporal relative risk",
  author       = personList(as.person("T. M. Davies"),
                   as.person("J. C. Marshall"),
                   as.person("M. L. Hazelton")),
  journal      = "Statistics in Medicine",
  year         = "2017",
  volume = "",
  pages        = "[in press]",

  textVersion  =
  paste("T. M. Davies, J. C. Marshall, M. L. Hazelton (2017).",
        "Tutorial on kernel estimation of continuous spatial and spatiotemporal relative risk;",
        "Statistics in Medicine, [in press].")
)

